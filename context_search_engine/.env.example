# Context Search Engine Environment Variables

# API Configuration
CONTEXT_SEARCH_HOST=127.0.0.1
CONTEXT_SEARCH_PORT=8001
CONTEXT_SEARCH_WORKERS=1

# Ollama Configuration
OLLAMA_HOST=http://localhost:11434
OLLAMA_MODEL=llama3.2:3b
OLLAMA_TIMEOUT=30
OLLAMA_MAX_RETRIES=3

# Performance Settings
MAX_CONCURRENT_REQUESTS=10
CONTEXT_WINDOW_SIZE=300
REQUEST_TIMEOUT=30

# Analysis Settings
CONFIDENCE_THRESHOLD=0.7
DEFAULT_ANALYSIS_MODE=standard
ENABLE_CACHING=true
CACHE_TTL=300

# Monitoring
ENABLE_METRICS=true
LOG_LEVEL=info
LOG_REQUESTS=true
LOG_RESPONSES=false

# Security
API_KEY=your_api_key_here
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# HuggingFace Cache Configuration
HF_HOME=/your/custom/path/huggingface
TRANSFORMERS_CACHE=/your/custom/path/transformers
HF_HUB_CACHE=/your/custom/path/hub
HF_DATASETS_CACHE=/your/custom/path/datasets

# Development
DEBUG=false
DEVELOPMENT_MODE=false